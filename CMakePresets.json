{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name" : "win32-release",
      "displayName": "Win32 Release",
      "generator": "Visual Studio 17 2022",
      "architecture": "Win32",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CONFIGURATION_TYPES": "Release",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL",
        "SAGE_USE_OPENAL": "ON",
        "SAGE_USE_FFMPEG": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "description": "Build the default configuration"
    },
    {
      "name": "win32-release",
      "configurePreset": "win32-release",
      "description": "Build the win32 release configuration",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "displayName": "Default Package",
      "configurePreset": "default",
      "description": "Package the default configuration"
    },
    {
      "name": "win32-release",
      "displayName": "Win32 Release Package",
      "configurePreset": "win32-release",
      "generators": ["ZIP"],
      "description": "Package the win32 release configuration"
    }
  ]
}