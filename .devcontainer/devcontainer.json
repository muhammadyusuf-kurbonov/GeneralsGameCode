{
	"name": "C++ Dev (vcpkg)",
	"build": {
	  "dockerfile": "Dockerfile",
	  "context": "."
	},
	"settings": {
	  "terminal.integrated.defaultProfile.linux": "bash",
	  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	  "cmake.generator": "Ninja"
	},
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"ms-vscode.vscode-typescript-next",
		"twxs.cmake",
		"vector-of-bool.cmake-tools",
		"ms-vscode.cpptools-extension-pack"
	],
	"postCreateCommand": "vcpkg install",
	"remoteUser": "vscode",
	"workspaceFolder": "/workspace",
	"mounts": [
	  "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
	],
	"features": {
	  "ghcr.io/devcontainers/features/git:1": {}
	},
	"runArgs": [
    // 1) forward the DISPLAY value (e.g. ":0")
    "--env", "DISPLAY=${env:DISPLAY}",

    // 2) mount the XWayland socket directory
    "--volume", "/tmp/.X11-unix:/tmp/.X11-unix:rw",

    // 3) (optional but recommended) share your Xauthority file
    "--volume", "${env:HOME}/.Xauthority:/home/vscode/.Xauthority:ro"
  ],
  "containerEnv": {
    // point clients inside the container to that file
    "XAUTHORITY": "/home/vscode/.Xauthority"
  }
}
